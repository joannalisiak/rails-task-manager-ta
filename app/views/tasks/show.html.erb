<div class="container">

  <%= link_to edit_task_path(@task), class: "btn btn-secondary pull-right" do %>
    <i class="fa fa-pencil"></i> Edit this task
  <% end %>

  <h1> <%= @task.title %> </h1>

  <div class="background-gray">
    <p> <%= @task.details %> </p>
  </div>

  <div class="border-gray margin-top">
    <% if @task.completed %>
      <p> <i class="fa fa-check-square-o"></i> This task is completed</p>
    <% else %>
      <p> <i class="fa fa-square-o"></i> This task is not completed yet</p>
    <% end %>
  </div>

  <%= link_to tasks_path do %>
    <i class="fa fa-history"></i> Back to list
  <% end %>
  
</div>
